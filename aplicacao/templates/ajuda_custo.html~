{% extends 'base.html' %}
{% block scripts %}
    <script type="text/javascript">
        function maiuscula(valor){
            var elemento=document.form;
            elemento.nome.value=elemento.nome.value.toUpperCase();
        }
        function desabilitar(valor){
            var elemento=document.form;
            if (valor == "todos"){
                document.getElementById("siape").style.display = 'none';
                document.getElementById("nome").style.display = 'none';
                document.getElementById("status").value = 'todos';
            }
            else if (valor == "siape"){
                document.getElementById("siape").style.display = 'inline';
                document.getElementById("siape").focus();
                document.getElementById("nome").style.display = 'none';
                document.getElementById("status").value = 'siape';
            }
            else if (valor == "nome"){
                document.getElementById("nome").style.display = 'inline';
                document.getElementById("nome").focus();
                document.getElementById("siape").style.display = 'none';
                document.getElementById("status").value = 'nome';
            }
        }
        function num(dom){
    	    dom.value=dom.value.replace(/\D/g,'');
        }   
           
    </script> 
{% endblock scripts %}
